<%= notice %>
<h2>Dailies List</h2>
<div class="product-block">
  <table class="table table-striped table-bordered table-hover">
    <thead>
    <tr>
      <th class="col-md-2">Uploader</th>
      <th class="col-md-2">Location</th>
      <th class="col-md-2">Month</th>
      <th class="col-md-2">Day</th>
      <th class="col-md-2">Min</th>
      <th class="col-md-2">Max</th>
      <th class="col-md-2">Precipitation</th>
      <th class="col-md-2">Snow cover</th>
      <th class="col-md-2">Note</th>
      <th class="col-md-2, text-center" colspan="3">Options</th>
    </tr>
    </thead>
    <tbody>
    <% @dailies.each do |daily| %>
      <tr>
        <td class="col-md-2"><%= daily.uploader_id %></td>
        <td class="col-md-2"><%= daily.location_id %></td>
        <td class="col-md-2"><%= daily.month %></td>
        <td class="col-md-2"><%= daily.day %></td>
        <td class="col-md-2"><%= daily.min %></td>
        <td class="col-md-2"><%= daily.max %></td>
        <td class="col-md-2"><%= daily.precipitation %></td>
        <td class="col-md-2"><%= daily.snow_cover %></td>
        <td class="col-md-2"><%= daily.note %></td>
        <td class="col-md-2">
          <%= link_to 'More', daily_path(daily), class: "btn btn-info" %>
        </td>
        <td class="col-md-2">
          <%= link_to 'Edit', edit_daily_path(daily), class: "btn  btn-warning" %>
        </td>
        <td class="col-md-2">
          <%= link_to 'Destroy', daily_path(daily), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>
<br>
<%= link_to 'New Daily', new_daily_path, class: "btn btn-primary" %>
